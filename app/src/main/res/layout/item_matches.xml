<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="120dp"
    android:layout_height="120dp"
    android:padding="20sp"
    android:orientation="vertical">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="90sp"
        android:layout_height="90sp"
        android:src="@mipmap/ic_launcher"
        android:id="@+id/Matches_Image"
        android:layout_gravity="center"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Match's ID"
        android:id="@+id/Matches_Id"
        android:visibility="gone"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Match's Name"
        android:id="@+id/Matches_Name"
        android:paddingBottom="20sp"
        android:textColor="@color/sad"
        android:layout_gravity="center"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Match's Name"
        android:id="@+id/Matches_PpUrl"
        android:visibility="gone"
        />


</LinearLayout>