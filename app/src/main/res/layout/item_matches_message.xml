<?xml version="1.0" encoding="utf-8"?>
    <com.google.android.material.card.MaterialCardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="5dp"
        app:cardBackgroundColor="@color/greyCardColor">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="50sp"
        android:layout_height="50sp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:src="@mipmap/ic_launcher"
        android:id="@+id/Matches_MImage"
        android:layout_gravity="center"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Match's ID"
        android:id="@+id/Matches_MId"
        android:visibility="gone"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Match's Name"
        android:id="@+id/Matches_MPpUrl"
        android:visibility="gone"
        />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Match's Name"
            android:id="@+id/Matches_MName"
            android:visibility="gone"
            />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Last Message"
        android:layout_gravity="center"
        android:gravity="end"
        android:textSize="20dp"
        android:layout_marginRight="5dp"

        android:textColor="@color/sad"
        android:layout_marginLeft="15dp"
        android:id="@+id/lastMessage"/>

    </LinearLayout>


    </com.google.android.material.card.MaterialCardView>


