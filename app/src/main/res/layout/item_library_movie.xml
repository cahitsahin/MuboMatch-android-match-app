<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:orientation="horizontal">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardUseCompatPadding="true"
            app:cardCornerRadius="10dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:id="@+id/Lmovie"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/movie_poster"
                        android:layout_width="68dp"
                        android:layout_height="100dp"
                        android:src="@drawable/no_image_found"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Match !!"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:visibility="gone"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/get_message_text"
                        android:id="@+id/match_text"/>

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/add_library_button"
                        android:layout_width="65dp"
                        android:layout_height="50dp"
                        android:text="Add"
                        android:visibility="gone"
                        android:textColor="@color/whiteCardColor"
                        android:background="@drawable/add_button"
                        android:layout_margin="3dp"
                        />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/delete_library_button"
                        android:layout_width="65dp"
                        android:layout_height="50dp"
                        android:text="Delete"
                        android:visibility="gone"
                        android:layout_margin="3dp"
                        android:textColor="@color/sad"
                        android:background="@drawable/delete_button"
                        />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginLeft="5dp">





                        <TextView
                            android:id="@+id/movie_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Movie Name"
                            android:textStyle="bold"
                            android:textSize="15dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            />

                        <TextView
                            android:id="@+id/movie_year"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="No Date Info"
                            android:textSize="15dp"
                            app:layout_constraintStart_toEndOf="@+id/movie_name"
                            app:layout_constraintTop_toBottomOf="@+id/movie_name" />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Director: "
                        android:textColor="@color/colorAccent"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/movie_director"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="No Info"
                        app:layout_constraintStart_toEndOf="@+id/movie_poster"
                        app:layout_constraintTop_toTopOf="parent"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Writer: "
                        android:visibility="gone"
                        android:textColor="@color/colorAccent"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/movie_writer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Writer:"
                        android:visibility="gone"
                        app:layout_constraintStart_toEndOf="@+id/movie_poster"
                        app:layout_constraintTop_toTopOf="parent"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Actors: "
                        android:textColor="@color/colorAccent"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/movie_actor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="No Info"
                        app:layout_constraintStart_toEndOf="@+id/movie_poster"
                        app:layout_constraintTop_toTopOf="parent"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Year : "
                        android:visibility="gone"
                        android:textColor="@color/loginRegisterButton"
                        android:textStyle="bold" />


                    <TextView
                        android:id="@+id/imdbId"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="60dp"
                        android:visibility="gone"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />

                    <TextView
                        android:id="@+id/movie_genre"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="60dp"
                        android:visibility="gone"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />

                    <TextView
                        android:id="@+id/movieUrl"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:text="NoInfo"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </LinearLayout>




            </LinearLayout>




        </com.google.android.material.card.MaterialCardView>









    </LinearLayout>